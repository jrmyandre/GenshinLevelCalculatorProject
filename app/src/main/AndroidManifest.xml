<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GenshinLevelCalculator"
        tools:targetApi="31">
        <activity
            android:name=".ResultPage"
            android:exported="false" />
        <activity
            android:name=".WeaponCalculatorPage"
            android:exported="false" />
        <activity
            android:name=".CharacterCalculatorPage"
            android:exported="false" />
        <activity
            android:name=".CharacterWeaponPage"
            android:exported="false"
            android:label="@string/title_activity_character_weapon_page" />
        <activity
            android:name=".CharacterPage"
            android:exported="false" />
        <activity
            android:name=".WeaponPage"
            android:exported="false"
            android:label="@string/title_activity_weapon_page"
            android:theme="@style/Theme.GenshinLevelCalculator" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>